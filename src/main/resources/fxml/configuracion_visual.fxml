<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.gestioncitas.controllers.ConfiguracionController"
            prefWidth="600" prefHeight="400">

    <!-- Encabezado -->
    <Label text="ConfiguraciÃ³n Visual"
           layoutX="20" layoutY="20"
           style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <!-- Contenedor principal -->
    <VBox layoutX="20" layoutY="60" spacing="15" AnchorPane.leftAnchor="20.0" AnchorPane.topAnchor="60.0"
          AnchorPane.rightAnchor="20.0" AnchorPane.bottomAnchor="20.0">

        <!-- Nombre del negocio -->
        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="Nombre de negocio:" prefWidth="150"/>
            <TextField fx:id="txtNombreNegocio" promptText="Escribe el nombre del negocio" HBox.hgrow="ALWAYS"/>
        </HBox>

        <!-- Color de fondo -->
        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="Color de fondo:" prefWidth="150"/>
            <ColorPicker fx:id="cpColorFondo"/>
        </HBox>

        <!-- Color de texto -->
        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="Color de texto:" prefWidth="150"/>
            <ColorPicker fx:id="cpColorTexto"/>
        </HBox>

        <!-- Color de botones -->
        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="Color de botones:" prefWidth="150"/>
            <ColorPicker fx:id="cpColorBotones"/>
        </HBox>

        <!-- Logo -->
        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="Logo:" prefWidth="150"/>
            <Button fx:id="btnSeleccionarLogo" text="Seleccionar Logo"/>
            <ImageView fx:id="imgLogo" fitHeight="60" fitWidth="120" preserveRatio="true" style="-fx-border-color: #ccc; -fx-border-width: 1;"/>
        </HBox>

    </VBox>
</AnchorPane>


